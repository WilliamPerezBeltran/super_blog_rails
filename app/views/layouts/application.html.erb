<!DOCTYPE html>
<html>

<head>
    <title>SuperBlog</title>
    <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
            <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to 'Super blog', root_path, class:"navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item ">
                    <% if signed_in? %>
                        <%= link_to 'Nuevo post',new_post_path, class:"nav-link" %>
                        <%= link_to 'Salir',logout_path,method: :delete, class:"nav-link" %>
                    <% else%>
                        <%= link_to 'Ingresar',login_path, class:"nav-link" %>
                        <%= link_to 'Registrarse', new_user_path, class:"nav-link"%>
                    <% end %>
                </li>
            </ul>
        </div>
    </nav>
    <%= yield %>
</body>

</html>