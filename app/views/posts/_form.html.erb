<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<% @post.errors.full_messages.each do |msg| %>
			<ul>
				<li><%= msg %></li>
			</ul>
		<% end %>
	<% end %>
	<div class="form-group">
		<%= f.label :Titulo %>
		<%= f.text_field :title, class:"form-control ", placeholder:"Ingrese el titulo" %>
	</div>
	<div class="form-group">
		<%= f.label :Cuerpo %>
		<%= f.text_area :body, class:"form-control " %>
	</div>
		<%= f.submit 'Crear post', class:"btn btn-primary " %>
<% end %>